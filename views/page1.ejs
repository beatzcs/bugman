        <li><a href="#">科技</a></li>
        <li><a href="#">财经</a></li>
        <li><a href="#">时尚</a></li>
    </ul>
</aside>

<script type="text/javascript">
    $(document).ready(function () {
        $("#left").load("./newsLeft?type=top");
    })

    $("#sidebar ul li").click(function () {
        $("#sidebar ul li").eq($(this).index()).addClass("curr").siblings().removeClass("curr");
        var list = ["top", "shehui", "guonei", "guoji", "yule", "tiyu", "junshi", "keji", "caijing", "shishang"];
        $("#left").load("./newsLeft?type=" + list[$(this).index()]);
    });
</script>
</body>
</html>